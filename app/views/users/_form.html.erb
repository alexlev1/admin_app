<%= form_with model: @user, local: true, class: "mt-4" do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: @user } %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.text_field :password, required: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :avatar %>
    <%= f.text_field :avatar, required: true, class: 'form-control' %>
  </div>

  <div class="action">
    <%= f.submit 'Сохранить', class: 'btn btn-primary' %> или <%= link_to 'Вернуться', users_path %>
  </div>
<% end %>